snippet header "cabecera para el documento"
---
title: "${1:Título}"
author: ${2:Johnny Cubides}
date: `date +"%A %d %B %Y"`
geometry: ${4:margin=2cm}
output: ${5:pdf_document}
---
$0
endsnippet

snippet img "Uso de imagenes"
![${1:Texto Alternativo}](./img/${2:image.png})
$0
endsnippet

snippet img-html "uso de imagenes html"
<img src="${1:image.png}" alt="$1" style="width:100%;">
endsnippet

snippet img-grav "Uso de imagenes grav"
![${1:Texto Alternativo}](img/${2:image.png})?resize=200,200)
$0
endsnippet

snippet img-html-url "Imagen html con url" 
<a href="${2:url}">
<img src="${1:img.png}" alt="$1" style="width:20%;">
</a>
$0
endsnippet

snippet audio-html "insert audio html"
<audio controls ${1:autoplay loop}>
	<source src="${3:audio.mp3/.ogg}" type="audio/${2:ogg mpeg}">
	Your browser does not support the audio element.
</audio>
$0
endsnippet


# https://www.w3schools.com/tags/tag_video.asp
# https://www.w3schools.com/tags/tag_source.asp
snippet video-html "insert video html"
<video style="max-width: 100%; height: auto;" controls ${1:autoplay loop}>
	<source src="${2:video}" type="video/${3:mp4 ogg}">
</video> 
endsnippet

# require markdown-extension - attr_list
snippet img-mkdocs "Uso de imagenes mkdocs"
![${1:Texto Alternativo}](img/${2:image.png}){: style="${3:width:100%; margin-left: auto; margin-right: auto; display: block}"}
$0
endsnippet

snippet link "Links"
[${1:Name_link}](${2:url})$0
endsnippet

snippet list "create list"
${1:a. 1. *.} ${2:item}
endsnippet

snippet sublist "create sublist"
		${1:a. 1. *.} ${2:item}
endsnippet

