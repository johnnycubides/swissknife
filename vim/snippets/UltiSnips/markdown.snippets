# img-pandoc
snippet img-pandoc "image in pandoc"
![${1:imageName}](./img/${2:img.png}){ width=${3:width}}$0
endsnippet

snippet label "etiqueta html, p, br, kdb"
<${1:kbd, p}>$2</$1>$0
endsnippet

snippet t-a "align text"
<div align="${1:center left right}">$2</div>$0
endsnippet

############
# REVEAL MD
############
snippet r-img "insert image reveal, size automatic"
<img class="stretch" data-src="${1:img/}${2:image.png}"/>
$0
endsnippet

snippet r-img-s "insert image reveal, size manual"
<img data-src="${1:img/}${2:image.png}" width="${3:100%}" height="${4:auto}"/>
$0
endsnippet

snippet r-img-bg "inser image how background"
<section data-background-image="${1:img/}${2:image.png}" data-background-size="${3:100}%" data-background-opacity="${4:1.0}">$0</section>
endsnippet
snippet r-slide-2columns "Slide de dos columnas"
<style>
	.container{
		display: flex;
	}
	.col{
		flex: 1;
	}
</style>
<section> <${1:h4}>${2:Título}</$1>
	<div class="container">
		<div class="col">
			${3:Elements}
		</div>
		<div class="col">
			${4:Elements}
		</div>
	</div>
</section>$0
endsnippet

