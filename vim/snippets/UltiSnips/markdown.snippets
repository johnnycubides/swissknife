snippet note "Admonition note"
!!! ${1:Warning Note Info Danger Error} "$2"
		$3
$0
endsnippet

snippet tables3c "Tabla 3 columnas"
|${1:          }|${2:          }|${3:  }|
|:-------------:|:-------------:|:-----:|
$0
endsnippet

snippet	code "Insert code text"
\`\`\`${1:bash}
$0
\`\`\`
endsnippet

