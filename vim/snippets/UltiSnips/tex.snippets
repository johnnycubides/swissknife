snippet tb "bold text"
\textbf{$1}$0
endsnippet

snippet ti "italic text"
\textit{$1}$0
endsnippet

snippet	link "href"
~\href{${1:enlace}}{${2:titulo}} $0
endsnippet

snippet bib-i "Init bibliography"
\begin{thebibliography}{${1:numero de entradas}}
$0
\end{thebibliography}
endsnippet

snippet bibi "bibliography item"
\bibitem{${1:id}} $0
endsnippet

snippet begin "iniciar un entorno"
\begin{${1:enviroment}}
$0
\end{$1}
endsnippet

snippet t-c "Aplica color al texto"
\textcolor{${1:red,blue,yellow,cyan,green,orange,violet,purple}}{$2}$0
endsnippet

snippet img "Insert image"
\begin{figure}[H]
	\center{}
	\includegraphics[width=${2:9cm}]{${1:img/}}
	\caption{$3}
	\label{fig_$4}
\end{figure}
$0
endsnippet

snippet img-footnote "Insert image with footnote in caption"
\begin{figure}[H]
	\center{}
	\includegraphics[width=${2:9cm}]{${1:img/}}
	\caption[]{$3\footnotemark}
	\label{fig_$4}
\end{figure}
% Tener presente de la ubicación del footnote, ya que esto
% es una técnica adapatada.
\footnotetext{$5}
$0
endsnippet

snippet img-svg "Insert svg image"
%\usepackage{svg} %insertar en el preambulo
