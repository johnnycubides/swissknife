snippet code-e "Insertar codigo y modificar listing"
% \usepackage{listings} % paste in preambule
% \usepackage{listingsutf8} % paste in preambule
%  in beamer? then \begin{frame}[fragile]...
% In the case Lua, this have dialects 5.1, 5.2, etc.
\begin{lstlisting}[
	upquote=true,
	language=${1:Python, C, {[5.1]Lua}, Octave, Javascript},
	tabsize=${2:2},
	caption=${3:},
	label=code_${4:},
	inputencoding=utf8,
	literate={á}{{\'a}}1 {é}{{\'e}}1 {í}{{\'i}}1 {ó}{{\'o}}1 {ú}{{\'u}}1,
	basicstyle=${5:\small \tiny},
	numberstyle=${6:\small \tiny},
	${7:columns=fullflexible}
]
$7
\end{lstlisting}
$0
endsnippet

snippet code-file "Insertar codigo desde archivo y modificar listing"
% \usepackage{listings} % paste in preambule
% \usepackage{listingsutf8} % paste in preambule
%  in beamer? then \begin{frame}[fragile]...
% In the case Lua, this have dialects 5.1, 5.2, etc.
\lstinputlisting[
	upquote=true,
	language=${1:Python, C, {[5.1]Lua}, Octave, Javascript},
	tabsize=${2:2},
	caption=${3:},
	label=code_${4:},
	inputencoding=utf8,
	literate={á}{{\'a}}1 {é}{{\'e}}1 {í}{{\'i}}1 {ó}{{\'o}}1 {ú}{{\'u}}1,
	basicstyle=${5:\small \tiny},
	numberstyle=${6:\small \tiny},
	${7:columns=fullflexible}
]
{${7:file.ext}}
$0
endsnippet

